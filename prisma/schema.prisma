generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  id Int @id @default(autoincrement())
  name         String
  description  String
  address      String
  url          String
  lat          Decimal
  lng          Decimal
  openingHours OpeningHour[]
  tags         PlaceTag[]
}

model Day {
  name        String @id
  OpeningHour OpeningHour[]
}

model OpeningHour {
  dayName  String
  from      String
  to        String
  placeId Int
  Place     Place  @relation(fields: [placeId], references: [id])
  day       Day    @relation(fields: [dayName], references: [name])

  @@unique([placeId, dayName, from, to])
}

model Tag {
  name     String @id
  PlaceTag PlaceTag[]
}

model PlaceTag {
  placeId Int
  tagName   String
  tag       Tag    @relation(fields: [tagName], references: [name])
  place     Place  @relation(fields: [placeId], references: [id])

  @@unique([placeId, tagName])
}
