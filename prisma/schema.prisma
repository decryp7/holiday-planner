generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  id Int @id @default(autoincrement())
  name         String
  gplaceid String
  description  String
  address      String
  url          String
  lat          Decimal
  lng          Decimal
  openHours OpenHour[]
  closeHours CloseHour[]
  tags         PlaceTag[]
}

model OpenHour {
  id Int @id @default(autoincrement())
  day  Decimal
  time      String
  placeId Int
  Place     Place  @relation(fields: [placeId], references: [id])

  @@unique([placeId, day, time])
}

model CloseHour {
  id Int @id @default(autoincrement())
  day  Decimal
  time      String
  placeId Int
  Place     Place  @relation(fields: [placeId], references: [id])

  @@unique([placeId, day, time])
}

model Tag {
  id Int @id @default(autoincrement())
  name     String
  PlaceTag PlaceTag[]
}

model PlaceTag {
  tagId   Int
  tag       Tag    @relation(fields: [tagId], references: [id])
  placeId Int
  Place     Place  @relation(fields: [placeId], references: [id])

  @@unique([placeId, tagId])
}
