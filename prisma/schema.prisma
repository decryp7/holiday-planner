generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  name         String        @id
  description  String
  address      String
  url          String
  lat          Decimal
  lng          Decimal
  openingHours OpeningHour[]
  tags         PlaceTag[]
}

model Day {
  name        String        @id
  OpeningHour OpeningHour[]
}

model OpeningHour {
  dayName   String
  from      String
  to        String
  placeName String
  Place     Place  @relation(fields: [placeName], references: [name])
  day       Day    @relation(fields: [dayName], references: [name])

  @@unique([placeName, dayName, from, to])
}

model Tag {
  name     String     @id
  PlaceTag PlaceTag[]
}

model PlaceTag {
  placeName String
  tagName   String
  tag       Tag    @relation(fields: [tagName], references: [name])
  place     Place  @relation(fields: [placeName], references: [name])

  @@unique([placeName, tagName])
}
