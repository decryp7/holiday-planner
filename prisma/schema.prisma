generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  name         String
  gplaceid String
  description  String
  address      String
  url          String
  lat          Decimal
  lng          Decimal
  openHours OpenHour[]
  closeHours CloseHour[]
  tags         PlaceTag[]
  @@id([lat, lng, name])
}

model OpenHour {
  day  Decimal
  time      String
  placeLng Decimal
  placeLat Decimal
  placeName String
  Place     Place  @relation(fields: [placeLat, placeLng, placeName], references: [lat, lng, name])

  @@unique([placeLat, placeLng, placeName, day, time])
}

model CloseHour {
  day  Decimal
  time      String
  placeLng Decimal
  placeLat Decimal
  placeName String
  Place     Place  @relation(fields: [placeLat, placeLng, placeName], references: [lat, lng, name])

  @@unique([placeLat, placeLng, placeName, day, time])
}

model Tag {
  name     String @id
  PlaceTag PlaceTag[]
}

model PlaceTag {
  tagName   String
  tag       Tag    @relation(fields: [tagName], references: [name])
  placeLng Decimal
  placeLat Decimal
  placeName String
  Place     Place  @relation(fields: [placeLat, placeLng, placeName], references: [lat, lng, name])

  @@unique([placeLat, placeLng, placeName, tagName])
}
