generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Place {
  name         String
  description  String
  address      String
  url          String
  lat          Decimal
  lng          Decimal
  openingHours OpeningHour[]
  tags         PlaceTag[]
  @@id([lat, lng])
}

model Day {
  name        String @id
  OpeningHour OpeningHour[]
}

model OpeningHour {
  dayName  String
  from      String
  to        String
  placelng Decimal
  placelat Decimal
  Place     Place  @relation(fields: [placelat, placelng], references: [lat, lng])
  day       Day    @relation(fields: [dayName], references: [name])

  @@unique([placelat, placelng, dayName, from, to])
}

model Tag {
  name     String @id
  PlaceTag PlaceTag[]
}

model PlaceTag {
  tagName   String
  tag       Tag    @relation(fields: [tagName], references: [name])
  placelng Decimal
  placelat Decimal
  Place     Place  @relation(fields: [placelat, placelng], references: [lat, lng])

  @@unique([placelat, placelng, tagName])
}
